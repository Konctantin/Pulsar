    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "lua: Current File",
            "type": "lua",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "path": "${fileDirname}/?.lua",
        },
        {
            "name": "lua: PulsarTester",
            "type": "lua",
            "request": "launch",
            "program": "${workspaceFolder}/test.lua",
            "console": "integratedTerminal",
        },
    ]
}
